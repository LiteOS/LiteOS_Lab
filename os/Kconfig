menu "OS configuration"     
    choice
    prompt "please select one os;if you has your own, please select the os_new"
    
    config LITEOS_ENABLE
        bool "we use the liteos as the os kernel"
    
    config NOVAOS_ENABLE
        bool "we use the novaos as the os kernel"
    
    config LINUXOS_ENABLE
        bool "we use the linux as the os kernel"
        
    config MACOS_ENABLE
        bool "we use the macos as the os kernel"
    
    config NEW_OS
        bool "we use the new os as the os kernel"     
        
    endchoice 
             
endmenu