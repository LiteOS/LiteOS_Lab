menu "Shell configuration"
    depends on LITEOS_ENABLE

config SHELL_ENABLE
    bool "Enable shell component"
    default n

if SHELL_ENABLE

    config SHELL_TASK_STACKSIZE
        int "The shell task size"
        default 2048  
        
    config SHELL_TASK_PRIOR
        int "The shell task priority"
        default 10     
endif

endmenu











